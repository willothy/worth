include "../../std.porth"

mem 28 + 1 .

0 while dup 28 < do
   0 while dup 30 < do
      dup mem + , if
         mem 30 + '*' .
      else
         mem 30 + ' ' .
      end
      1 mem 30 + stdout write drop

      1 +
   end
   drop

   mem 30 + 10 .
   1 mem 30 + stdout write drop

   // pattern
   mem     , 1 shl
   mem 1 + ,
   bor

   1 while dup 28 < do
      swap 1 shl 7 band
      over mem + 1 + , bor
      2dup 110 swap shr 1 band
      swap mem + swap .
      swap

      1 +
   end
   drop drop

   1 +
end
drop